<!DOCTYPE html>
<html>
  <head>
    <% include ./partials/header.ejs %>
  </head>
  <body>
    <% include ./partials/nav.ejs %>
    <div>
      <h1><%= title %></h1>
      <p>Welcome to <%= title %></p>
      <hr>
    </div>
    <div>
      <% include ./partials/form.ejs %>
    </div>
    <hr>
    <div class="containter">
      <div class="row">
        <div class="col-md-4">
          <% if(searchResults === "empty") { 
            console.log("we have empty results"); %>
            <h2>Search did not return any results, please try again</h2>
          <% } else {
            console.log("so we made it to the else"); %>
            <ul>
            <% searchResults.results.forEach(function(item) { %>
              <li> <%= item.title %> - <span style:"color:red"> <%= item.vote_count %> </span></li>
            <% }); %>
            </ul>
          <% }; %>
        </div>
        <div class="col-md-8">
      <!-- place for the chart -->
        <canvas id="myChart" ></canvas>
        <script>
        var ctx = document.getElementById("myChart").getContext('2d');
        var myChart = new Chart(ctx, {
            type: 'horizontalBar',
            data: {
                labels: ["Red", "Blue", "Yellow", "Green", "Purple", "Orange"],
                datasets: [{
                    label: '# of Votes',
                    data: [12, 19, 3, 5, 2, 3],
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(255, 206, 86, 0.2)',
                        'rgba(75, 192, 192, 0.2)',
                        'rgba(153, 102, 255, 0.2)',
                        'rgba(255, 159, 64, 0.2)'
                    ],
                    borderColor: [
                        'rgba(255,99,132,1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)',
                        'rgba(75, 192, 192, 1)',
                        'rgba(153, 102, 255, 1)',
                        'rgba(255, 159, 64, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    yAxes: [{
                        ticks: {
                            beginAtZero:true
                        }
                    }]
                }
            }
        });
      </script>
      </div>
    </div>
  </body>
</html>
 